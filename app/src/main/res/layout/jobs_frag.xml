<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_fragment_container"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:id="@+id/main_layout"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1.2"
            android:id="@+id/orders_div"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/searchDiv">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/floating_search_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:searchIcon="@drawable/search_icon"
                    app:iconifiedByDefault="false"
                    android:paddingLeft="-10dp"
                    android:paddingStart="-10dp"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:queryBackground="@android:color/black"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorEditTextBG" />

            </RelativeLayout>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/searchDiv">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/pending_order_div"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toolbar_sign_in"
                            android:background="@color/colorBG">

                            <TextView
                                android:id="@+id/pending_order_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:text="@string/pending_orders"
                                android:textColor="@color/or_color_name"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorEditTextBG" />

                        </RelativeLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:dividerHeight="16dp"
                            android:divider="@android:color/transparent"
                            android:id="@+id/list_of_messages"
                            android:transcriptMode="alwaysScroll"
                            android:stackFromBottom="true"
                            android:layout_alignParentLeft="true" />

                        <RelativeLayout
                            android:id="@+id/accepted_order_div"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toolbar_sign_in"
                            android:background="@color/colorBG">

                            <TextView
                                android:id="@+id/accepted_order_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:text="@string/accepted_orders"
                                android:textColor="@color/or_color_name"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorEditTextBG" />

                        </RelativeLayout>


                        <com.digiomega.hangrymatesrestaurants.Utils.CustomRecyclerView
                            android:id="@+id/accepted_order_recyclerview"
                            android:layout_width="match_parent"
                            android:nestedScrollingEnabled="false"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical">

                        </com.digiomega.hangrymatesrestaurants.Utils.CustomRecyclerView>


                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/colorEditTextBG" />




        </RelativeLayout>


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:id="@+id/order_detail_container"
            android:layout_weight="0.8"
            tools:context="com.example.raomudassar.foodomia.ActivitiesAndFragments.PaymentMethodActivity">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/order_detail_layout">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/hotel_btn_div">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/order_id">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/order_id"
                            android:id="@+id/ordr_nmbr"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingStart="15dp"
                        android:layout_below="@+id/order_id"
                        android:background="@color/colorBG"
                        android:id="@+id/instruction_div"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/instructions"
                            android:textSize="10sp"
                            android:textColor="@color/or_color_name"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingStart="15dp"
                        android:layout_below="@+id/instruction_div"
                        android:background="@color/colorWhite"
                        android:id="@+id/account_div">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/information"
                            android:layout_centerVertical="true"
                            android:id="@+id/inst_img"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/inst_img"
                            android:text="@string/instruction_s"
                            android:id="@+id/inst_tv"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"
                            android:layout_marginStart="15dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingStart="15dp"
                        android:layout_below="@+id/account_div"
                        android:background="@color/colorBG"
                        android:id="@+id/order_detail_div">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_detail"
                            android:textSize="10sp"
                            android:textColor="@color/colorBlack"
                            android:layout_centerVertical="true"/>


                    </RelativeLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:id="@+id/scrolView"
                        android:layout_below="@+id/order_detail_div">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.digiomega.hangrymatesrestaurants.Utils.CustomExpandableListView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/custon_list_order_items">

                            </com.digiomega.hangrymatesrestaurants.Utils.CustomExpandableListView>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="@color/colorBG"
                                android:layout_below="@+id/custon_list_order_items"
                                android:id="@+id/order_hotel_detail_div">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorEditTextBG"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/order_hotel_detail"
                                    android:textSize="10sp"
                                    android:layout_marginStart="15dp"
                                    android:textColor="@color/or_color_name"
                                    android:layout_centerVertical="true"/>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:id="@+id/hotel_name_div"
                                android:layout_below="@+id/order_hotel_detail_div">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/restaurants_name"
                                    android:id="@+id/order_hotel_name"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorBlack"
                                    android:layout_marginStart="15dp"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:text="@string/sariyas"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorEditTextBG"
                                    android:textSize="15sp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:id="@+id/hotel_add_div"
                                android:layout_below="@+id/hotel_name_div">

                                <TextView
                                    android:id="@+id/order_hotel_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="11dp"
                                    android:text="@string/restaurants_address"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:text="@string/sariyas"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorEditTextBG"

                                    android:textSize="15sp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/hotel_add_div"
                                android:id="@+id/hotel_number_div">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/restaurants_number"
                                    android:id="@+id/order_hotel_number"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:paddingStart="15dp"
                                android:background="@color/colorBG"
                                android:layout_below="@+id/hotel_number_div"
                                android:id="@+id/order_user_detail_div">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/order_user_detail"
                                    android:textSize="10sp"
                                    android:textColor="@color/or_color_name"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:id="@+id/user_name_div"
                                android:layout_below="@+id/order_user_detail_div">

                                <TextView
                                    android:id="@+id/order_user_name_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginBottom="62dp"
                                    android:text="@string/user_name"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:text="@string/sariyas"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorEditTextBG"
                                    android:textSize="15sp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:id="@+id/user_add_div"
                                android:layout_below="@+id/user_name_div">

                                <TextView
                                    android:id="@+id/order_user_address_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:text="@string/user_address"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:maxLines="4"
                                    android:ellipsize="end"
                                    android:layout_centerVertical="true"
                                    android:textStyle="normal" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:text="sariyas"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorEditTextBG"
                                    android:textSize="15sp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/user_add_div"
                                android:id="@+id/user_number_div">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_number"
                                    android:id="@+id/order_user_number_tv"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorBlack"
                                    android:layout_marginStart="15dp"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:paddingStart="15dp"
                                android:layout_below="@+id/user_number_div"
                                android:background="@color/colorBG"
                                android:id="@+id/order_payment_detail_div">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/order_payment_details"
                                    android:textColor="@color/or_color_name"
                                    android:textSize="10sp"
                                    android:layout_centerVertical="true"/>


                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:id="@+id/tip_div"
                                android:layout_below="@+id/order_payment_detail_div">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="@string/rider_tip"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    android:paddingStart="15dp"
                                    android:id="@+id/tip"
                                    android:textColor="@color/colorBlack"
                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="0.00"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    android:paddingEnd="15dp"
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/total_tip_tv"
                                    android:textColor="@color/colorBlack"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorEditTextBG"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>


                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:id="@+id/tax_div"
                                android:layout_below="@+id/tip_div">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="@string/tax"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    android:paddingStart="15dp"
                                    android:id="@+id/tax"
                                    android:textColor="@color/colorBlack"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="(16%)"
                                    android:id="@+id/tax_tv"
                                    android:textSize="10sp"
                                    android:textStyle="normal"
                                    android:paddingStart="5dp"
                                    android:layout_marginStart="3dp"
                                    android:layout_toEndOf="@+id/tax"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="0.00"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    android:paddingEnd="15dp"
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/total_tex_tv"
                                    android:textColor="@color/colorBlack"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorEditTextBG"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/tax_div"
                                android:id="@+id/delivery_fee_div"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/delivery_fee"
                                    android:textColor="@color/colorBlack"
                                    android:id="@+id/delivery_fee_tv"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textColor="@color/colorBlack"
                                    android:id="@+id/total_delivery_fee_tv"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="15sp"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorEditTextBG"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/sub_total_div"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/delivery_fee_div">

                                <TextView
                                    android:id="@+id/sub_total_bill_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:text="@string/subtotal"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />


                                <TextView
                                    android:id="@+id/sub_total_amount_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="15sp"
                                    android:text="0.00"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorEditTextBG"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_below="@+id/sub_total_div"
                                android:id="@+id/total_payment_div"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total"
                                    android:textColor="@color/colorBlack"
                                    android:id="@+id/total_bill_tv"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="15dp"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textColor="@color/colorBlack"
                                    android:id="@+id/total_amount_tv"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="15sp"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/colorEditTextBG"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>


                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:layout_below="@+id/total_payment_div"
                                android:id="@+id/payment_method_div">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/payment_method"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorBlack"
                                    android:layout_marginStart="15dp"
                                    android:textSize="14sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:gravity="start|center_vertical"
                                    android:textStyle="normal"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/card"
                                    android:layout_weight="1"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginEnd="10dp"
                                    android:textColor="@color/colorBlack"
                                    android:id="@+id/payment_method_tv"
                                    android:gravity="end|center_vertical"
                                    android:textSize="14sp"
                                    android:textStyle="normal"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </ScrollView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/bottomview"
                    android:layout_alignParentBottom="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:id="@+id/hotel_btn_div"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorRed"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorBG"
                            android:id="@+id/accept_div"
                            android:layout_marginEnd="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/accept"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorRed"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorRed"
                            android:layout_weight="1"
                            android:layout_marginStart="3dp"
                            android:id="@+id/decline_div">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/decline"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorWhite"
                                />


                        </RelativeLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorRed"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/print_div">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/print"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"
                            />


                    </RelativeLayout>

                </LinearLayout>



            </RelativeLayout>

            <ProgressBar
                android:id="@+id/orderDetailProgress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_height="wrap_content" >
            </ProgressBar>


        </FrameLayout>


    </LinearLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar_div"
        android:id="@+id/no_job_div"
        android:visibility="gone"
        android:background="@color/colorBG">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_no_job"
            android:layout_centerInParent="true"
            android:src="@drawable/no_job_today"
            app:layout_widthPercent = "40%"
            app:layout_heightPercent = "40%"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/img_no_job"
            android:layout_centerHorizontal="true"
            android:text="Whoops!"
            android:id="@+id/whoops"
            android:textSize="22sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/whoops"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:text="Let us know where are you so we can recommend nearby events."
            android:textSize="14sp"/>

    </androidx.percentlayout.widget.PercentRelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/transparent_layer"
        android:visibility="gone"
        android:background="@color/transparent_tint">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:id="@+id/progressDialog"
        android:background="@drawable/round_shape_dialog_white">

        <com.gmail.samehadar.iosdialog.CamomileSpinner
            android:id="@+id/dealsProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:spinnerColor="@color/colorRed"
            />

    </RelativeLayout>

</FrameLayout>