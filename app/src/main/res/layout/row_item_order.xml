<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layoutDirection="ltr"
    android:id="@+id/order_item_main_div">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="2dp"
        android:id="@+id/top_layout">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/deal_name"
            android:text="@string/new_1_section_name"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toStartOf="@+id/date_deal_tv"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorBlack"/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/order_number"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/deal_name"
            android:text="New 1 Section Name"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorDeal"/>


        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/date_deal_tv"
            android:layout_alignParentEnd="true"
            android:text="0000-00-00"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorDeal"
            />
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/time_deal_tv"
            android:layout_alignParentEnd="true"
            android:text="0000-00-00"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/date_deal_tv"
            android:textColor="@color/colorDeal"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/price_deal_tv"
            android:layout_alignParentEnd="true"
            android:text = "$20"
            android:layout_below="@+id/time_deal_tv"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/colorRed"
            />

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top_layout"
        android:background="@color/colorEditTextBG" />

</RelativeLayout>
